{
  "manifest_version": 3,
  "name": "Tintify - Color Filter and Screen Shader",
  "version": "1.0.4",
  "description": "A lightweight extension that adds a screen overlay tint",
  "permissions": ["storage"],
  "host_permissions":["<all_urls>"],
  "content_scripts":[{ "matches": ["<all_urls>"], "css": ["content.css"], "run_at": "document_start" },
    { "matches": ["<all_urls>"], "js": ["content.js"], "run_at": "document_start" }    
    ],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "128": "images/icon128.png"
  }
}
